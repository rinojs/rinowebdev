<d:html>
    <!DOCTYPE html>
    <html>
    <head>
        {{ @preload, ./src/preloads/preload.tot }}
        {{ @preload, ./src/preloads/onload.tot }}
        <script type="text/javascript" src="main.js"></script>
        <link rel="stylesheet" href="style.css">
        <link rel="stylesheet" href="bulma.min.css">
        <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
        {{ @component, ./src/components/head.tot }}
        {{ @component, ./src/components/font.tot }}

        <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ @data.title }}</title>
    </head>
    <body>
        {{ @component, ./src/components/header.tot }}
        <div class="mainview">
            <section class="section">
                <div id="mainTitle">
                    <img id="mainImg" src="/assets/rino256.png">
                    <h1 class="title">Rino.js</h1>
                    <h2 class="subtitle">Fast learning, preprocessing, intuitive web framework</h2>
                    <button class="button is-success" @click="location.assign('/documents/introduction.html');">Document</button>
                    <button class="button is-info" @click="location.assign('/sponsor.html');">Sponsor</button>
                    <button class="button is-danger" @click="location.assign('/shop.html');">Shop</button>
                </div>
                <div><pre><code>npm i rinojs</code></pre></div>
            </section>
            <section class="section">
                <div class="columns">
                    <div class="column">
                        <h1 class="title">Easy</h1>
                        <p>
                            Just common learnings that front-end developers do.
                            Standard HTML, CSS, Javascript and Node.js and preprocessing system.
                            We don't need to waste our time and it just works.
                        </p>
                    </div>
                    <div class="column">
                        <h1 class="title">Performant</h1>
                        <p>
                            No virtual dom, smaller files, reusable components with full control over the pages.
                            Standard SEO, standard web setup, no more problems with static site generation
                        </p>
                    </div>
                    <div class="column">
                        <h1 class="title">Freedom</h1>
                        <p>
                            Use libraries you like.
                            Manage your important state in local storage.
                            And store the others in variables.
                            Create and use what you like.
                        </p>
                    </div>
                </div>
            </section>
            <section class="section">
                <h1 class="title">Sponsors</h1>
                <h2 class="subtitle">
                    Become a monthly sponsor and put your image and name here!
                </h2>
                <p>Have a look at our <a href="/sponsor.html">sponsor</a> page for details.</p>
                <br />
                <br />
                <h1 class="title">üî• Immortal Supporter</h1>
                <h1 class="title">üëº Divine Supporter</h1>
                <h1 class="title">üéª Ancient Supporter</h1>
                <h1 class="title">‚öî Legend Supporter</h1>
                <h1 class="title">üå≤ Archon Supporter</h1>
                <h1 class="title">üçÄ Crusader Supporter</h1>
                <h1 class="title">‚òò Guardian Supporter</h1>
                <h1 class="title">üå± Herald Supporter</h1>
            </section>
            <section class="section">
                <h1 class="title">Shop</h1>
                <button class="button is-primary" @click="window.open('https://www.redbubble.com/shop/ap/149559711');">RB Rino Shop</button>
                <button class="button is-primary" @click="window.open('https://www.redbubble.com/people/Geargom/shop');">RB Geargom Shop</button>
                <h2 class="subtitle mt-3">
                    Your purchase from Rino design or Geargom shop will help us to continue our projects for software, game and designs.
                    We are receiving roughly 20~30% from the whole price.
                </h2>
                <div class="columns">
                    <img class="column merchImg" src="/assets/rino_bucket_hat.jpg">
                    <img class="column merchImg" src="/assets/rino_backpack.jpg">
                    <img class="column merchImg" src="/assets/rino_desk_mat.jpg">
                </div>
            </section>
        </div>
        {{ @component, ./src/components/footer.tot }}
    </body>
    </html>
</d:html>
<d:css>
.merchImg {
    width: 256px;
}

.mt-3 {
    margin-top: 6px;
}

.subtitle {
    font-size: 1.5em;
}

.mainview .section p
{
    font-size: 1.1em;
}

#mainTitle {
    width: 600px;
    margin: 50px auto;
    color: #212121;
    font-weight: bold;
    font-size: 2em;
    text-align: center;
}

#mainTitle h1 {
    font-size: 1.4em;
    width: 100%;
}

#mainTitle h2 {
    font-size: 1em;
}

#mainImg {
    margin: auto;
}

.non-selectable {
    user-select: none;
}

.ml-4 {
    margin-left: 8px !important;
}

@media all and (max-width: 620px) {
    #mainTitle {
        width: auto;
        color: #212121;
        font-weight: bold;
        font-size: 1.5em;
        text-align: center;
    }

    .mainview .section .title {
        font-size: 1.4em;
    }

    .mainview .section .subtitle {
        font-size: 1.3em;
    }
}

@media all and (max-width: 300px) {
    #mainImg {
        width: 100%;
    }
}
</d:css>
<d:js>
</d:js>